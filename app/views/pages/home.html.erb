
<div class="banner" id= "banner-bg-home">
  <div class="container">
    <div class='text-center'>
      <div class="fadeInAndSlideDown">
        <h1>Welcome Home</h1>
      </div>
    </div>
  </div>
</div>

<div class="container-fluid home-search">
  <%= form_tag flats_path, method: :get, class: 'form-inline' do %>
    <div class='text-center'>
      <div class="form-group">
        <input type="text" class="form-control" id="cityfield" name="city" placeholder="Where do you want to go ?">
      </div>
      <div class="form-group">
        <div class="input-daterange input-group" id="datepicker">
          <input type="text"  data-provide='datepicker' class="input-sm form-control" name="check_in" placeholder="From" />
          <span class="input-group-addon">to</span>
          <input type="text"  data-provide='datepicker' class="input-sm form-control" name="check_out" placeholder="To" />
        </div>
      </div>
      <select class="form-control" id="guestsfield" name="guests" placeholder="Number of guests">
        <%= options_for_select((1..5).to_a.map { |number| [pluralize(number, 'guest'), number] }) %>
      </select>
      <button type="submit" class="btn btn-success">Search</button>
    </div>
  <% end %>
</div>


<div class="container-fluid text-center">
  <div class="row">
    <div class="title-padded"><h2>Discover new cities and horizons</h2></div>
    <div class="col-xs-12 col-sm-6 col-lg-4 text-center">
      <%= link_to "/flats?utf8=✓&city=Paris&checkin=&checkout=&guests=1" do %>
        <div class="city-card" id="paris-city-card">
          <div id="text-card-padded">
            <h3>Paris</h3>
          </div>
        </div>
      <% end %>
    </div>
    <div class="col-xs-12 col-sm-6 col-lg-4  text-center">
      <%= link_to "/flats?utf8=✓&city=Berlin&checkin=&checkout=&guests=1" do %>
        <div class="city-card" id="berlin-city-card">
          <div id="text-card-padded"><h3>Berlin</h3></div>
        </div>
      <% end %>
    </div>
    <div class="col-xs-12 col-sm-6 col-lg-4 text-center">
      <%= link_to "/flats?utf8=✓&city=Torino&checkin=&checkout=&guests=1" do %>
        <div class="city-card"id="turin-city-card">
          <div id="text-card-padded"><h3>Torino</h3></div>
        </div>
      <% end %>
    </div>
  </div>
</div>

<% content_for(:after_js) do %>
  <%= javascript_tag do %>
    $(document).ready(function(){
      $('.datepicker .input-daterange').datepicker({
        startDate: "04/24/2015",
        todayBtn: "linked",
        clearBtn: true,
        multidate: false,
        daysOfWeekDisabled: "0",
        calendarWeeks: true,
        todayHighlight: true
      });
    });
  <% end %>
<% end %>






