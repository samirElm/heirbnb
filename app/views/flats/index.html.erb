<div class="container-fluid">
  <div class="row text-center">
    <h1>Flats</h1>
  </div>

  <div class="container-fluid">
    <div class="row"style="padding-left: 80px">
      <% if @flats.empty? %>
        <div class="col-xs-12 text-center">
          <h2>There is no flats for now !</h2>
        </div>
      <% else %>
        <div class="col-xs-8 text-center">
          <% @flats.each do |flat| %>
            <%= link_to flat_path(flat) do %>
              <div class="col-xs-6 text-center flat-card">
                <div class="row text-center">
                  <%= image_tag flat.flat_images.first.picture.url(:medium) %>
                </div>
                <div class="row">
                  <div class="col-xs-3">
                    <%= image_tag flat.user.picture, class: "img-circle reverse-margin" %>
                  </div>
                  <div class="col-xs-6 padding-top">
                    <p><%= flat.title %></p>
                    <p>For <%= flat.capacity%> people</p>
                    <p><%= flat.city%></p>
                  </div>
                </div>
              </div>
            <%end%>
          <%end%>
        </div>
      <%end%>
    </div>
  </div>
</div>

